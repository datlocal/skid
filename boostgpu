-- Function to reduce GPU usage by optimizing graphical settings
local function reduceGPUUsage()
    local lighting = game:GetService("Lighting")
    
    -- Disable global shadows to reduce GPU load
    lighting.GlobalShadows = false
    
    -- Reduce lighting effects
    lighting.Brightness = 0.5 -- Lower brightness
    lighting.OutdoorAmbient = Color3.fromRGB(127, 127, 127) -- Set a neutral outdoor ambient light
    lighting.Ambient = Color3.fromRGB(100, 100, 100) -- Reduce ambient light for a less intense scene
    
    -- Turn off shadows for all parts in the game
    for _, part in pairs(game.Workspace:GetDescendants()) do
        if part:IsA("BasePart") then
            part.CastShadow = false
        end
    end
    
    -- Reduce the number of parts with complex meshes
    for _, part in pairs(game.Workspace:GetDescendants()) do
        if part:IsA("MeshPart") then
            part:Destroy() -- Optionally remove MeshParts if they aren't needed or replace them with simpler parts
        end
    end

    -- Reduce particle effects by disabling them (or you could simply hide them)
    for _, effect in pairs(game.Workspace:GetDescendants()) do
        if effect:IsA("ParticleEmitter") or effect:IsA("Trail") then
            effect.Enabled = false -- Disable particles and trails
        end
    end
    
    -- Lower the render quality for higher performance on weaker GPUs
    game:GetService("UserSettings"):GetService("GameSettings").GraphicsQuality = Enum.GraphicsQuality.Low -- Set graphics to low
    
    -- Disable the skybox if not essential
    lighting.Sky = nil -- Remove skybox if not crucial for the game's atmosphere

    -- Optionally, disable reflections if they are not necessary
    lighting.Reflectance = 0 -- Set reflectance to 0 to remove reflections

    -- Remove unnecessary UI elements to reduce GPU load from GUIs
    for _, gui in pairs(game:GetService("Players").LocalPlayer.PlayerGui:GetDescendants()) do
        if gui:IsA("ScreenGui") or gui:IsA("Frame") or gui:IsA("TextLabel") then
            gui.Visible = false -- Optionally hide GUI elements that aren't needed for performance
        end
    end

    print("GPU optimization applied.")
end

-- Run the GPU optimization function
reduceGPUUsage()
